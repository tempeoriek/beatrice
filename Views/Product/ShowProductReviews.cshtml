@model ProductReviewsModel
@using Nop.Web.Models.Catalog;


@if (Model.Items.Count > 0)
{
    <div class="product-review-list">
                    @foreach (var review in Model.Items)
                    {
                        int ratingPercent = review.Rating * 20;
                        <div class="product-review-item">
                            <div class="review-item-head">
                                <div class="review-title"><strong>@review.Title</strong></div>
                            </div>
                            <div class="review-content">
                                <div class="rating-white">
                                    @for (int star = 1; star <= review.Rating; star++)
                                    {
                                       <span></span>
                                    }
                                </div>

                                <div class="review-text">
                                    @Html.Raw(Nop.Core.Html.HtmlHelper.FormatText(review.ReviewText, false, true, false, false, false, false))
                                </div>
                                <div class="review-info">
                                    <p>
                                        @T("Reviews.From"):  @if (review.AllowViewingProfiles)
                                        {
                                            <a href="@Url.RouteUrl("CustomerProfile", new { id = review.CustomerId })">@(review.CustomerName)</a>
                                        }
                                        else
                                        {
                                            @review.CustomerName
                                        }

                                        <span class="separator">|</span>
                                        <span class="date">@T("Reviews.Date"): @review.WrittenOnStr</span>
                                    </p>



                                </div>
                            </div>
                        </div>
                    }
                </div>
}
      

