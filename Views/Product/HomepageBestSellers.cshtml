@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="row p-0 m-0 mb-5">
        <div class="col-12 col-md-12 col-sm-12 d-flex justify-content-center align-items-center"> 
        <h1 class="text-title-demo" style="font-size: 35px;">Best Seller</h1> 
        </div>
    </div>

    @* Best Seller Desktop *@
    <div class="position-relative d-none d-md-block hidden-xs hidden-sm">
        <div class="row m-0 p-0">
        <div class="carouseldesktop best-seller" style="padding-left: 2%; padding-right: 2%;">
            @for(var i = 0; i < Model.Count() ; i++) {
            var temp = Model[i];
            <div class="col-12">
                <div class="row" style="padding: 0 3rem;">
                <a href="@Url.RouteUrl("Product", new { SeName = temp.SeName})" class="clean">
                    <img src="@temp.DefaultPictureModel.ImageUrl" class="img-fluid center-block" style="position: relative;"/> 
                </a>

                </div>
                <div class="row mt-2" style="padding: 0 3rem;">
                <a href="@Url.RouteUrl("Product", new { SeName = temp.SeName})" class="clean" style="text-decoration: none;">
                    <p class="worksans-medium" style="font-size: 20px; color: #525252;" class="m-0">@temp.Name</p>
                </a>
                
                </div>
                <div class="row" style="padding: 0 3rem;">
                <p class="worksans-reg" style="font-size: 20px; color: #525252;" class="m-0">IDR @temp.ProductPrice.Price</p>
                </div>
            </div>
            }
        </div>
        </div>
        
        <div class="row">
        <div style="position: absolute; top: 35%; left: 4%;">
            <a role="button" data-slide="prev" class="prevsliderbest">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class=" sr-only">Previous</span>
            </a>
        </div>
        <div style="position: absolute; top: 35%; right: 4%;">
            <a role="button" data-slide="next" class="nextsliderbest">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class=" sr-only">Next</span>
            </a>
        </div>
        </div>
    </div>

    @* Best Seller Mobile *@
    <div class="row d-block d-md-none hidden-md hidden-xl position-relative">
        <div class="row mb-5" id="carouselExampleControlsBestItems2">
        <div class="carouselmobile best-seller hidden-sm m-0">
            @for (int i = 0; i < Model.Count(); i++)
            {
            var temp = Model[i];
            <div class="col-12 col-md-12 col-sm-12">
                <div class="row px-4" style="display: flex; justify-content: center; align-items: center;">
                <a href="@Url.RouteUrl("Product", new { SeName = temp.SeName})">
                    <img src="@temp.DefaultPictureModel.ImageUrl" class="img-fluid center-block" />
                </a>
                </div>
                
                <div class="row px-4" style="font-size: 15px; line-height: 19px; margin-top: 10px;">
                <a href="@Url.RouteUrl("Product", new { SeName = temp.SeName})" class="clean" style="text-decoration: none;">
                    <p class="worksans-medium" style="font-size: 15px; color: #525252;">@temp.Name</p>
                </a>
                </div>
                <div class="row px-4" style="margin-top: -10px; font-size: 14px;">
                <p class="worksans-reg" style="font-size: 15px; color: #525252;">IDR @temp.ProductPrice.Price</p>
                </div>
            </div>
            }
        </div>

        <div class="row">
            <div style="position: absolute; top: 35%; left: 5%;">
            <a role="button" data-slide="prev" class="leftsliderbest">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class=" sr-only">Previous</span>
            </a>
            </div>
            <div style="position: absolute; top: 35%; right: 5%;">
            <a role="button" data-slide="next" class="rightsliderbest">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class=" sr-only">Next</span>
            </a>
            </div>
        </div>
        </div>
    </div>
}

<script>
	var model = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
	console.log(model);    
</script>