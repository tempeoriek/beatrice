@model CategoryModel
@using Nop.Core.Domain.Common;
@using Nop.Core.Domain.Seo;
@using Nop.Core.Infrastructure;
@using Nop.Web.Models.Catalog;

@{
    ViewBag.Title = "Web hunt preview";
}




<div class="container mt-4">

    @if (Model.Products.Any())
    {
        <div class="row catalogue-img pl-md-0 pr-md-0">
            @foreach (var item in Model.Products)
            {
                var colCss = "col-6 col-sm-6 col-md-4 col-lg-3";
                <div class="@colCss catalog-line">
                    @Html.Partial("_ProductBox", item)
                </div>
               
            }
        </div>
    }
    else
    {
        <div class="col-main-slim mt-5"><h3>We're still preparing the collection. Please stay tuned.</h3></div>

    }

</div>

