@{
  string absolutepath = HttpContext.Current.Request.Url.AbsolutePath;
  var styleDivCenterDesktop = "position: absolute; top: 0; left: 0; height: 100%; width: 100%; right: 0; bottom: 0;";
  var styleContentCenterDeskopFlashSale = "font-size: 40px; color: white; display: flex; justify-content: center; align-items: center; height: 100%;";
  var styleContentCenterDeskop = "display: block; color: black; justify-content: center; align-items: center; height: 100%;";
  List<string> FlashSale = new List<string>();
  FlashSale.Add("08:00");
  FlashSale.Add("12:00");
  FlashSale.Add("15:00");
}

@if (absolutepath.Equals("/flash-sale")) {
  <div class="row d-none d-md-block carousel" style="margin: 15px 0; margin-bottom: 0; position: relative;"> 
    <img class="d-block w-100" src="@String.Format("/Content/Images/uploaded/categories/{0}.jpg", Model.SeName)"> 
    <div class="text-center" style="@styleDivCenterDesktop">
      <h1 style="@styleContentCenterDeskopFlashSale">@Model.Name</h1>
    </div>
  </div>

  <div class="row d-block d-md-none carousel" style="position: relative;"> 
    <img style="left: 50%; position: relative; transform: translateX(-50%);" class="d-block" src="@String.Format("/Content/Images/uploaded/categories/{0}.jpg", Model.SeName)"> 
    <div class="text-center" style="@styleDivCenterDesktop">
      <h1 style="@styleContentCenterDeskopFlashSale">@Model.Name</h1>
    </div>
  </div>

  <div class="row p-0 m-0 mb-5" style="background-color: #9D3131; width: 120%; margin-left: -10% !important;">
    <div class="col-md-1 col-sm-1"></div>
    <div class="col-12 col-md-5 col-sm-5 time-flash-sale"> 
      <ul class="nav nav-pills-clock" id="pills-tab" role="tablist">
        @{
          for (int i = 0; i < FlashSale.Count(); i++)
          {
              var fs = FlashSale[i];

              <li class="nav-item" style="margin-right: 15px;">
                <a style="color: white; font-size: 20px;" class="worksans-medium nav-link-clock @(@i == 0 ? "active" : "") " id="pills-id-@i" data-toggle="pill" href="#pills-@i" role="tab" aria-controls="pills-@i" aria-selected="true">
                  @fs
                </a>
              </li>
          }
        }
      </ul>
    </div>
    <div class="col-md-5 col-sm-5 countdown-flash-sale"> 
      <div class="tab-content" id="pills-tabContent">
        @for (int z = 0; z < FlashSale.Count(); z++)
        {
          <div class="tab-pane fade @(@z == 0 ? "show active" : "")" id="pills-@z" role="tabpanel" aria-labelledby="pills-id-@z">
            <span class="worksans-reg" style="font-style: italic; color: white; font-size: 19px;" id="demo-@z" />
          </div>
        }
      </div>
    </div>
    <div class="col-md-1 col-sm-1"></div>
  </div>
} else if (absolutepath.Equals("/new-arrivals")) {
  <div class="row d-none d-md-block carousel" style="margin: 15px 0; margin-bottom: 0; position: relative;"> 
    <img class="d-block w-100" src="@String.Format("/Content/Images/uploaded/categories/{0}.jpg", Model.SeName)"> 
    <div class="text-center" style="@styleDivCenterDesktop">
      <h1 style="@styleContentCenterDeskopFlashSale">@Model.Name</h1>
    </div>
  </div>

  <div class="row d-block d-md-none carousel" style="position: relative;"> 
    <img style="left: 50%; position: relative; transform: translateX(-50%);" class="d-block" src="@String.Format("/Content/Images/uploaded/categories/{0}.jpg", Model.SeName)"> 
    <div class="text-center" style="@styleDivCenterDesktop">
      <h1 style="@styleContentCenterDeskopFlashSale">@Model.Name</h1>
    </div>
  </div>
} else if (absolutepath.Equals("/coming-soon") || absolutepath.Equals("/catalog/comingsoon")) { 
  <div class="row d-none d-md-block carousel" style="margin: 15px 0; margin-bottom: 0; position: relative;"> 
    <img class="d-block w-100" src="@String.Format("/Content/Images/uploaded/categories/{0}.jpg", Model.SeName)"> 
    <div class="text-center" style="@styleDivCenterDesktop">
      <h1 style="@styleContentCenterDeskopFlashSale">@Model.Name</h1>
    </div>
  </div>

  <div class="row d-block d-md-none carousel" style="position: relative;"> 
    <img style="left: 50%; position: relative; transform: translateX(-50%);" class="d-block" src="@String.Format("/Content/Images/uploaded/categories/{0}.jpg", Model.SeName)"> 
    <div class="text-center" style="@styleDivCenterDesktop">
      <h1 style="@styleContentCenterDeskopFlashSale">@Model.Name</h1>
    </div>
  </div>

  <div class="row p-0 m-0 mb-5" style="background-color: #D8C7BD; width: 120%; margin-left: -10% !important;">
    <div class="col-12 col-md-12 col-sm-12 d-flex justify-content-center align-items-center" style="height: 55px;"> 
      <h2 style="color: white; font-size: 20px;" id="demo-coming-soon"/>
    </div>
  </div>
} else {
  <div class="row d-none d-md-block carousel" style="margin: 15px 0; margin-bottom: 0; position: relative;"> 
    <img class="d-block w-100" src="@String.Format("/Content/Images/uploaded/categories/{0}.jpg", Model.SeName)"> 
    <div class="text-center" style="@styleDivCenterDesktop">
    </div>
  </div>

  @* header mobile *@
  <div class="row d-block d-md-none carousel" style="margin: 0 -30px 40px; position: relative;"> 
    <div class="text-center" style="@styleDivCenterDesktop">
      <h1 style="@styleContentCenterDeskop">@Model.Name</h1>
    </div>
  </div>
}

<script>
  // Set the date we're counting down to
  var countDownDate = new Date("Aug 20, 2021 15:37:25").getTime();
  var countDownDate2 = new Date("Aug 20, 2021 12:00:00").getTime();
  var countDownDate3 = new Date("Aug 20, 2021 15:00:00").getTime();
  var countDownDate4 = new Date("Aug 20, 2021 15:00:00").getTime();

  // Update the count down every 1 second
  var x = setInterval(function() {

    // Get today's date and time
    var now = new Date().getTime();
      
    // Find the distance between now and the count down date
    var distance = countDownDate - now;
    var distance2 = countDownDate2 - now;
    var distance3 = countDownDate3 - now;
    var distance4 = countDownDate4 - now;
    
    var days = Math.floor(distance / (1000 * 60 * 60 * 24));
    var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    var seconds = Math.floor((distance % (1000 * 60)) / 1000);

    var days2 = Math.floor(distance2 / (1000 * 60 * 60 * 24));
    var hours2 = Math.floor((distance2 % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    var minutes2 = Math.floor((distance2 % (1000 * 60 * 60)) / (1000 * 60));
    var seconds2 = Math.floor((distance2 % (1000 * 60)) / 1000);
    
    var days3 = Math.floor(distance3 / (1000 * 60 * 60 * 24));
    var hours3 = Math.floor((distance3 % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    var minutes3 = Math.floor((distance3 % (1000 * 60 * 60)) / (1000 * 60));
    var seconds3 = Math.floor((distance3 % (1000 * 60)) / 1000);
    
    var days4 = Math.floor(distance4 / (1000 * 60 * 60 * 24));
    var hours4 = Math.floor((distance4 % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    var minutes4 = Math.floor((distance4 % (1000 * 60 * 60)) / (1000 * 60));
    var seconds4 = Math.floor((distance4 % (1000 * 60)) / 1000);
    
    var hourNow = new Date().getHours();
    // Output the result in an element with id="demo"
    if (document.getElementById("demo-0")) document.getElementById("demo-0").innerHTML = "Ends in  " + days + " : " + hours + " : " + minutes + " : " + seconds ;
    if (document.getElementById("demo-1")) document.getElementById("demo-1").innerHTML = "Ends in  " + days2 + " : " + hours2 + " : " + minutes2 + " : " + seconds2 ;
    if (document.getElementById("demo-2"))document.getElementById("demo-2").innerHTML = "Ends in  " + days3 + " : " + hours3 + " : " + minutes3 + " : " + seconds3 ;
    if (document.getElementById("demo-coming-soon")) document.getElementById("demo-coming-soon").innerHTML = "Available in  " + days4 + " : " + hours4 + " : " + minutes4 + " : " + seconds4 ;
      
    // If the count down is over, write some text 
    if (distance4 < 0 && document.getElementById("demo-coming-soon")) {
      clearInterval(x);
      document.getElementById("demo-coming-soon").innerHTML = "Sale has ended";
    }
    if (distance3 < 0 && document.getElementById("demo-2")) {
      clearInterval(x);
      document.getElementById("demo-2").innerHTML = "Flash sale has ended";
    }
    if (distance2 < 0 && document.getElementById("demo-1")) {
      clearInterval(x);
      document.getElementById("demo-1").innerHTML = "Flash sale has ended";
    }
    if (distance < 0 && document.getElementById("demo-0")) {
      clearInterval(x);
      document.getElementById("demo-0").innerHTML = "Flash sale has ended";
    }
  }, 1000);
</script>