          </div>
          <div data-parent="#accordionLeftMenuFooter" id="collapseOne" class="p-2 collapse" role="tabpanel" aria-labelledby="HeadingOne" style="border-bottom: 1px solid lightgrey">
            @foreach (var topic in Model.Topics.Where(x => x.IncludeInFooterColumn1).ToList())
            {
              <a style="color: gray;"  href="@Url.RouteUrl("Topic", new { SeName = topic.SeName })">@topic.Name</a> <br>
            }
          </div>
        </div>
      </div>

      <div class="row px-3 m-1">
        <div class="col-12 p-2">
          <div class="head-prod-detail" role="tab" id="HeadingTwo" style="border-bottom: 1px solid lightgrey">
            <a class="acc-prod-detail collapsed" style="color: gray; font-size: 15px" role="button" data-toggle="collapse" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              ACCOUNT
