            //$(this).find('.dropmenu').stop(true, true).delay(200).fadeOut(500);
            $('.myaccount-menu').delay(3000).fadeOut("slow", function () { });
        });

        $(".accordion").on("click", ".accordion-header", function () {
            $(this).toggleClass("active").next().slideToggle();
        });

    </script>
